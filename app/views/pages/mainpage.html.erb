<div class="container-fluid">
    <div class="row">
        Postings:
    </div>    
    
    <div>
    <% @tasks.each do |task| %>
        <h1>ITEM <%= task.id %></h1>
        <p>NAME: <%= task.name %></p>
        <p>LOCATION: <%= task.location %></p>
        <p>DESCRIPTION: <%= task.description %></p>
        <p>BOUNTY: $<%= task.price %></p>
        <p>TIME CREATED: <%= task.created_at %></p>
        <p>[THERE WILL BE A PLACE HERE TO CLICK AND CLAIM!]</p>
    <% end %>
        
        
    </div>
</div>